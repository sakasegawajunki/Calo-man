<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class:'link-follow' %><br>
    <%= link_to "chatを始める", chat_path(user.id), class: "btn btn-sm btn-info " %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post,class:'link-follow' %>
  <% end %>
<% end %>