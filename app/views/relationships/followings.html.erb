<div id="main-b-visual">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-10 offset-1">
        <h4 class="title my-2"><i class="fas fa-people-arrows fa-3x"></i> フォロー会員<span class ="count">(全<%= @users.count %>名)</span></h4>
        <% if @users.exists? %>
        <table class="table table-hover table-inverse my-5">
          <tr>
            <th class= "text-center">プロフィール画像</th>
            <th class= "text-center">名前</th>
            <th class= "text-center">性別</th>
            <th class= "text-center">年齢</th>
            <th colspan "3"></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td class= "text-center">
              <%= attachment_image_tag user, :profile_image, size: "60x60", format: "jpeg",fallback: "no_image.jpg" %>
            </td>
            <td class= "text-center">
              <%= link_to user.name, user_path(user.id),class:'nav-users' %>
            </td>
            <td class= "text-center"><%=user.sex %></td>
            <td class= "text-center"><%=user.age %></td>
            <td class= "text-center"><%= render "relationships/info", user: user %></td>
          </tr>
          <% end %>
        </table>
        <% else %>
          <div class="nil_user my-4">ユーザーはいません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>