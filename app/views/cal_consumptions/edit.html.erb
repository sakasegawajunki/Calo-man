<div class="container my-5">
  <h4>消費カロリー</h4>
   <div class="row text-center d-flex align-items-center my-5">
     <div class="col-lg-12">
       <span>+  </span><%=@cal_consumption.total_cal_consumptions %><span> Kcal</span>
     </div>
   </div>
    <div class="row text-center d-flex align-items-center my-5">
      <label class="col-lg-4">行動パターン</label>
      <label class="col-lg-1">+</label>
      <label class="col-lg-7">消費カロリー</label>
    </div>

    <%=form_with model:@cal_consumption , url: cal_consumption_path, local: true do |f| %>
    <div class="row text-center d-flex align-items-center my-5">
      <div class="col-lg-4">
        <%= f.select :action_pattern, CalConsumption.action_patterns.to_a %>
    </div>
      <div class="col-lg-1">+</div>
      <div class="col-lg-7">
        <%= f.text_field :cal_consumption, class:"mb-2",size: "30x1" %><span> Kcal</span>
      </div>
    </div>
    <div class="row text-center d-flex align-items-center my-5">
      <div class="col-lg-12">
        <%=f.submit '更新する', class:'btn btn-success mb-2 btn-sm px-5'%>
      </div>
    </div>
    <% end %>
  </din>