<div class="containser pt-5">
  <h4 class="ml-4 mb-5"><%= @user.name %>さんの詳細データ</h4>
  <div class="row">
    <div class="col-6 user-data mx-auto">
      <table class="table table-bordered">
        <tr>
          <th class="table-active font-large">身長</th>
          <td class="font-large text-center"><%= @user.height %><span> cm</span></td>
        </tr>
        <tr>
          <th class="table-active font-large">体重</th>
          <td class="font-large text-center"><%= @user.weight %><span> kg</span></td>
        </tr>
        <tr>
          <th class="table-active font-large">BMI</th>
          <td class="font-large text-center"><%= @user.bmi %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 back d-flex align-items-center justify-content-center my-4">
    <%= link_to "戻る", user_path(@user) %>
    </div>
  </div>
</div>

