<div class="containser pt-5">
  <h4 class="ml-4"><%= @user.name %>さんのページ</h4>
    <div class="row">
      <div class="col-4 text-center">
        <%= attachment_image_tag @user, :profile_image, size: "300x300", format: "jpeg", fallback: "no_image.jpg" %>
      </div>
      <div class="col-8 d-flex align-items-center justify-content-center">
        <table>
          <tr>
            <th class="font-large">名前</th>
            <td class="font-large text-left"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="font-large">性別</th>
            <td class="font-large text-left"><%= @user.sex %></td>
          </tr>
          <tr>
            <th class="font-large">年齢</th>
            <td class="font-large text-left"><%= @user.age %>歳</td>
          </tr>
          <tr>
            <th class="font-large">ひと言</th>
            <td class="font-large text-left"><%= @user.introduction %></td>
          </tr>
          <%if @user == current_user %>
          <tr>
            <td><%= link_to"詳細データ", user_users_mydata_path(@user) %></td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-4 text-center my-1">
      <span class="mr-5"><%= link_to"フォロー一覧", user_followings_path(@user) %></span>
      <span><%= link_to"フォロワー一覧", user_followers_path(@user) %></span>
    </div>
    <%if @user == current_user %>
    <div class="col-8 text-center">
      <%= link_to"編集する", edit_user_path(@user), class: "btn btn-success btn-sm px-4 mr-4" %>
      <%= link_to"退会する", unsubcribe_users_path, class: "btn btn-danger btn-sm px-4" %>
    </div>
    <% end %>
  </div>
</div>
