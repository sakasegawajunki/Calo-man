   <h5>週間データ（折れ線グラフ）</h5>
  <canvas id="myLineChart"></canvas>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>

  <script>
  var ctx = document.getElementById("myLineChart");
  var myLineChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['月曜日', '火曜日', '水曜日', '木曜日', '金曜日', '土曜日', '日曜日'],
      datasets: [
        {
          label: 'カロリーバランス',
          data: [
         <% @cal_ingestions.each do |cal_ingestions|%>
           <%=cal_ingestions.total_cal_ingestions.to_i - CalConsumption.find_by(created_at: cal_ingestions.created_at..cal_ingestions.created_at.end_of_day ).total_cal_consumptions.to_i %>,
          <% end %>
            ],
          borderColor: "rgba(255,0,0,1)",
          backgroundColor: "rgba(0,0,0,0)"
        },
        {
          label: 'カロリ-消費量',
          data: [
         <% @cal_consumptions.each do |cal_consumptions|%>
           -<%=cal_consumptions.total_cal_consumptions.to_i %>,
          <% end %>
            ],
          borderColor: "rgba(0,0,255,1)",
          backgroundColor: "rgba(0,0,0,0)"
        },
        {
          label: 'カロリー摂取量',
          data: [
         <% @cal_ingestions.each do |cal_ingestions|%>
           <%=cal_ingestions.total_cal_ingestions.to_i %>,
          <% end %>
            ],
          borderColor: "rgba(0,255,0,1)",
          backgroundColor: "rgba(0,0,0,0)"
        }
      ],
    },
    options: {
      title: {
        display: true
      },
      scales: {
        yAxes: [{
          ticks: {
            suggestedMax: 3000,
            suggestedMin: -3000,
            stepSize: 500,
            callback: function(value, index, values){
              return  value +  'Kcal'
            }
          }
        }]
      },
    }
  });
  </script>
