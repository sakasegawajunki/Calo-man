<div id="main-a-visual">
  <div class="container py-5">
    <h4  class="title mb-5"><i class="fas fa-database fa-3x"></i> カロリーデータ</h4>
     <div class="row text-center d-flex align-items-center my-1">
      <div class="col-lg-12 col-md-12 col-xs-6">
      <!--=====表の部分テンプレート(週間)=====-->
       <%= render "data/week_table", cal_balance_sun: @cal_balance_sun, cal_balance_mon: @cal_balance_mon,
         cal_balance_tue: @cal_balance_tue, cal_balance_wed: @cal_balance_wed, cal_balance_thu: @cal_balance_thu,
         cal_balance_fri: @cal_balance_fri, cal_balance_sat: @cal_balance_sat, week_sum: @week_sum %>
      </div>
    </div>
     <div class="row text-center d-flex align-items-center my-1">
    <div class="col-lg-6 col-md-6 col-xs-6">
      <!--=====表の部分テンプレート（月間）=====-->
       <%= render "data/month_table", month_sum: @month_sum, month_sum_weight: @month_sum_weight %>
    </div>
    </div>
    <div class="row mb-3">
      <div class="col-lg-4 col-md-4 col-xs-12">
        <div class="cal-text cal">※1㎏の脂肪 = 約7,000 kcal分</div>
      </div>
        <div class="col-lg-7 col-md-7 col-xs-12">
        <div class="cal-text"> ⇨ <span class="weight">体重1㎏ </span>減らすには、カロリーバランス<span class="cal"> -7,000 kcal </span>が目安になります。</div>
      </div>
    </div>
    <div class="row text-center d-flex align-items-center my-5">
      <div class="col-lg-12 col-md-12 col-xs-12">
     <!--=====グラフの部分テンプレート=====-->
        <%= render "data/chart", cal_consumption: @cal_consumption, cal_ingestion: @cal_ingestion %>
      </div>
    </div>
    <div class="row text-center d-flex align-items-center my-1">
      <div class="col-lg-12 col-md-12 col-xs-12">
     <!--=====ランキングの部分テンプレート=====-->
      <%= render "data/rank" %>
      </div>
    </div>
  </div>
</div>