<div id="mainvisual">
  <div class="container py-5">
    <h4 class="title"><i class="fas fa-balance-scale-right fa-3x"></i> 摂取カロリー</h4>
    <%=form_with model: @cal_ingestion, url: cal_ingestions_path, local: true do |f| %>
     <div class="row text-center d-flex align-items-center my-5">
       <div class="col-lg-12 col-md-12 col-xs-12 datetime">
          登録日：  <%= f.date_field :date %>
      </div>
    </div>
      <div class="row mb-3 mt-5">
        <div class ="col-lg-5 col-md-5 col-xs-12 mt-5">
          <p class="mr-3 mb-5">朝食 :
            <span class="ml-3"><%= f.number_field :breakfast_cal, class:"mb-2",size: "20x1" %></span>
            <span class="ml-3">Kcal</span>
          </p>
          <p class="mr-3 mb-5">昼食 :
           <span class="ml-3"><%= f.number_field :lunch_cal, class:"mb-2",size: "20x1" %></span>
           <span class="ml-3">Kcal</span></p>
          <p class="mr-3 mb-5">夕食 :
            <span class="ml-3"><%= f.number_field :dinner_cal, class:"mb-2",size: "20x1" %></span>
            <span class="ml-3">Kcal</span></p>
          <p class="mr-3 mb-5">間食 :
           <span class="ml-3"> <%= f.number_field :snack_cal, class:"mb-2",size: "20x1" %></span>
           <span class="ml-3">Kcal</span></p>
          <p class="ml-5 mt-8">
            <%=f.submit '保存する', class:'btn btn-primary mb-2 btn-lg px-5'%>
          </p>
      </div>
      <!--=====メニュー一覧=====-->
      <div class ="col-lg-6 col-md-6 col-xs-12">
        <%= render "cal_ingestions/menu" %>
      </div>
     </div>
   <% end %>
  </div>
</div>