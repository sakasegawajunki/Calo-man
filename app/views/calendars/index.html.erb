<div id="main-b-visual">
  <div class="container py-5">
    <h4 class="title"><i class="fas fa-table fa-3x"></i> 月間一覧(カロリーバランス)</h4>
    <div class="row my-5">
      <div class="col-lg-12 col-md-12 col-xs-12 calendar">
        <%= month_calendar events: [] do |date| %>
          <div class="calendar-date"><%= date.day %></div>
          <div class ="cal-balance-num">
            <%
            ingestion = @cal_ingestions.find_by(date: date)
            consumption = @cal_consumptions.find_by(date: date)
            resoult = (ingestion&.total_cal_ingestions.to_i - consumption&.total_cal_consumptions.to_i).to_s(:delimited)
            %>
            <%= resoult %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>