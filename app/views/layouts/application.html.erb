<!DOCTYPE html>
<html>
  <head>
    <title>CaloMan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="flash-message">
        <p id ="notice"><%= flash[:notice] %></p>
      </div>
    <% elsif flash[:alert]%>
      <div class="flash-message">
        <p id="alert"><%= flash[:alert] %></p>
      </div>
    <% end %>

    <%= render "layouts/header" %>
    <main>
      <%= yield %>
    </main>
  <%= render "layouts/footer" %>

  </body>
</html>
